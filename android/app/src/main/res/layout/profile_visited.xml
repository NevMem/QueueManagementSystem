<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/indent_double">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/placeIcon"
        android:layout_width="@dimen/profileVisitedIconWidth"
        android:layout_height="wrap_content"
        tools:src="@drawable/icon_profile" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent"
        android:paddingLeft="@dimen/indent_double"
        android:paddingRight="@dimen/indent_double"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/visitedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/profileVisitedTitleTextSize"
            android:fontFamily="@font/montserrat_light"
            tools:text="Hospital" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/tagsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent"
            app:flexWrap="wrap" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>